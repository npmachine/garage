{
  "compilerOptions": {
    // "module": "commonjs",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution":"node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/javascript/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // "jsx": "react",
    "jsx": "react-jsx",
  },
  "include": [
    "./app/javascript/**/*.ts",
    "./app/javascript/**/*.tsx",
    "./app/javascript/**/*.jsx",
    "./app/javascript/**/*.js",
 ],
  "exclude": [
    "node_modules"
  ]
}
