<!DOCTYPE html>
<html>
  <head>
    <title>Garage</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body>
    <main class="min-h-screen mx-auto flex flex-col">
      <div class="flex-none">
        <%= render "layouts/header" %>
      </div>
      <div class="flex-1">
        <div class="max-w-7xl mx-auto lg:flex lg:gap-x-16 lg:px-8">
          <%= yield :sidebar %>
          <div class="px-4 py-4 sm:px-6 lg:flex-auto lg:px-0">
            <%= yield %>
          </div>
        </div>
      </div>
      <div class="flex-none">
        <%= render "layouts/footer" %>
        <%= render partial: "shared/flash" %>
      </div>
    </main>
  </body>
</html>
