<% if flash.any? %>
  <div data-controller="flash" class="inset-0 p-6 items-start justify-end">
    <div class="flex flex-col items-center justify-center">
      <% flash.each do |type, message| %>
        <%= render Flash::Component.new(type: type, message: message) %>
      <% end %>
    </div>
  </div>
<% end %>
